extends ../layout

block content
  .container
    form( method='post', action='users/login', class="col-sm-6")
      h1 Register
      p Please register using the form below
      .form-group
        label Username
        input.form-control(type='email', name='username', placeholder='Enter Username')
      .form-group
        label Password
        input.form-control(type='password', name='password', placeholder='Enter Password')
      button.btn.btn-default(type='submit') Login