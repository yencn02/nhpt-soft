extends ../layout

block content
  .container
    form( method='post', action='/users/login', class="col-sm-6")
      h1 Login
      p Please login using the form below
      .form-group
        label Username
        input.form-control(type='text', name='username', placeholder='Enter Username')
      .form-group
        label Password
        input.form-control(type='password', name='password', placeholder='Enter Password')
      button.btn.btn-default(type='submit') Login