extends ../layout

block content
  .container
    form( method='post', action='/users/register', class="col-sm-6", enctype='multipart/form-data')
      h1 Register
      p Please register using the form below
      if errors
        ul.errors.alert.alert-danger
          each error, i in errors
            li #{error.msg}
      .form-group
        label Name
        input.form-control(type='text', name='name', placeholder='Enter Name', value='#{name || ""}')
      .form-group
        label Email
        input.form-control(type='email', name='email', placeholder='Enter Email', value='#{email|| ""}')
      .form-group
        label Username
        input.form-control(type='text', name='username', placeholder='Enter Username', value='#{username || ""}')
      .form-group
        label Password
        input.form-control(type='password', name='password', placeholder='Enter Password', value='#{password || ""}')
      .form-group
        label Password Confirmation
        input.form-control(type='password', name='password_confirmation', placeholder='Enter Password Confirmation', value='#{password_confirmation|| ""}')
      .form-group
        label Profile Image
        input.form-control(type='file', name='avatar')
      button.btn.btn-default(type='submit') Register