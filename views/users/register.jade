extends ../layout

block content
  .container
    form( method='post', action='users/register', class="col-sm-6", enctype='multipart/form-data')
      h1 Register
      p Please register using the form below
      .form-group
        label Name
        input.form-control(type='text', name='name', placeholder='Enter Name')
      .form-group
        label Email
        input.form-control(type='email', name='email', placeholder='Enter Email')
      .form-group
        label Username
        input.form-control(type='email', name='username', placeholder='Enter Username')
      .form-group
        label Password
        input.form-control(type='password', name='password', placeholder='Enter Password')
      .form-group
        label Password Confirmation
        input.form-control(type='password', name='password_confirmation', placeholder='Enter Password Confirmation')
      .form-group
        label Profile Image
        input.form-control(type='file', name='profileimage')
      button.btn.btn-default(type='submit') Submit