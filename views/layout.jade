doctype html
html
  head
    title #{title}: NHPT Soft
    meta( charset='utf-8' )
    meta( http-equiv='X-UA-Compatible', content='IE=edge' )
    meta( name='viewport', content='width=device-width, initial-scale=1' )
    link( rel='stylesheet', href='/stylesheets/bootstrap.css' )
    link( rel='stylesheet', href='/stylesheets/style.css' )
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') NHPT Soft
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li( class=(title === 'Home' ? 'active' : '') )
              a(href='/') Home
            li( class=(title === 'About Us' ? 'active' : '') )
              a(href='/about') About Us
            li( class=(title === 'Contact' ? 'active' : '') )
              a(href='/contact') Contact
          ul.nav.navbar-nav.navbar-right
            li( class=(title === 'Login' ? 'active' : '') )
              a(href='/users/login') Login
            li( class=(title === 'Register' ? 'active' : '') )
              a(href='/users/register') Register
    if locals.message
      each v,k in message
        .message.alert(class='alert-#{k}', style="margin-bottom: 0px; position: absolute; width: 100%; text-align: center;")
          = v
    main
      block content

    footer
      p &copy; #{new Date().getFullYear()}, All Rights Reverved

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src='/javascripts/bootstrap.js')
