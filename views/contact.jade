extends layout

block content
  .container
    form( method='post', action='contact/send', class="col-sm-6")
      h1 Contact
      .form-group
        label Name
        input.form-control(type='text', name='name', placehodler='Enter Name')
      .form-group
        label Email
        input.form-control(type='email', name='email', placehodler='Enter Email')
      .form-group
        label Message
        textarea.form-control( name='message', placehodler='Enter Message...')
      button.btn.btn-default(type='submit') Submit